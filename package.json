{
  "name": "AdventOfNode2016",
  "description": "Advent of Code 2016, in Node/Typescript",
  "version": "1.0.0",
  "main": "bin/main.js",
  "private": true,
  "scripts": {
    "lint": "./node_modules/.bin/tslint src/*",
    "transpile": "./node_modules/.bin/tsc -p .",
